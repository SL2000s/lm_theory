{% extends "base.html.jinja" %}

{% block content %}
<h2>Edit Extracted Paper Data</h2>
<div class="form-container">
    <form action="/submit_paper_extraction" method="POST">
        <label for="paper-data-json">Extracted Data (Editable):</label>
        <textarea id="paper-data-json" name="paper_data_json" rows="20" cols="80">{{ paper_data_json | e }}</textarea>
        
        <button type="submit" class="submit-btn">Submit Edited Data</button>
    </form>
</div>
{% endblock %}
